@using AsistenciaUniversitaria.Web.Models
@{
    ViewData["Title"] = "Agregar Escuela";
    var recintos = ViewBag.Recintos as List<Recinto>;
}

<h1>Agregar Escuela</h1>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label class="form-label">Recinto</label>
        <select name="RecintoId" class="form-select">
            @if (recintos != null)
            {
                foreach (var r in recintos)
                {
                    <option value="@r.Id">@r.Nombre</option>
                }
            }
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Nombre</label>
        <input name="Nombre" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Estado</label>
        <select name="Estado" class="form-select">
            <option value="activo">Activo</option>
            <option value="inactivo">Inactivo</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</form>
