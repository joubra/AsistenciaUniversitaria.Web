@model AsistenciaUniversitaria.Web.Models.Grupo

@{
    ViewData["Title"] = "Eliminar Grupo";
}

<h1>Eliminar Grupo</h1>

<h4>¿Está seguro que desea eliminar este grupo?</h4>
<hr />
<dl class="row">
    <dt class="col-sm-2">Carrera</dt>
    <dd class="col-sm-10">@Model.Carrera?.Nombre</dd>

    <dt class="col-sm-2">Nombre</dt>
    <dd class="col-sm-10">@Model.Nombre</dd>

    <dt class="col-sm-2">Turno</dt>
    <dd class="col-sm-10">@Model.Turno</dd>

    <dt class="col-sm-2">Estado</dt>
    <dd class="col-sm-10">@Model.Estado</dd>
</dl>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" name="Id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
