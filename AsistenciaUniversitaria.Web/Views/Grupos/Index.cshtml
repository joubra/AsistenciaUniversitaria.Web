@model IEnumerable<AsistenciaUniversitaria.Web.Models.Grupo>

@{
    ViewData["Title"] = "Grupos";
}

<h1>Grupos</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Agregar Grupo</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Carrera</th>
            <th>Nombre</th>
            <th>Turno</th>
            <th>Estado</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Carrera?.Nombre</td>
                <td>@item.Nombre</td>
                <td>@item.Turno</td>
                <td>@item.Estado</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                    <a asp-controller="GrupoEstudiantes" asp-action="Asignar" asp-route-id="@item.Id" class="btn btn-info btn-sm">Asignar Estudiantes</a>
                    <a asp-controller="Asistencias" asp-action="Tomar" asp-route-grupoId="@item.Id" class="btn btn-success btn-sm">Pasar Asistencia</a>
                    <a asp-controller="Asistencias" asp-action="Ver" asp-route-grupoId="@item.Id" class="btn btn-outline-secondary btn-sm">Ver Asistencia</a>
                </td>


            </tr>
        }
    </tbody>
</table>
