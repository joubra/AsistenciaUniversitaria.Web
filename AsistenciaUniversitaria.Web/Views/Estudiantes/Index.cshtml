@model IEnumerable<AsistenciaUniversitaria.Web.Models.Estudiante>

<h2 class="mb-4">Estudiantes</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Agregar Estudiante</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Carnet</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nombre</td>
                <td>@item.Carnet</td>
                <td>@item.Estado</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
